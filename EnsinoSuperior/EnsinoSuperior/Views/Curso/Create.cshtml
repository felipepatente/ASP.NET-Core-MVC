@model Modelo.Cadastros.Curso

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutIES.cshtml";
}

<h2>Create</h2>

<h4>Curso</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" id="nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartamentoID" class="control-label"></label>
                <select asp-for="DepartamentoID" id="segmento" class ="form-control" asp-items="@(new SelectList(@ViewBag.Departamentos, "DepartamentoID", "Nome"))"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<script>
    window.addEventListener("load", function () {

        var segmento = document.getElementById("segmento");

        segmento.addEventListener("mouseout", function (event) {

            var segmento = document.getElementById("segmento").value;

            if (segmento == "1") {
                document.getElementById("nome").disabled = true;
            } else {
                document.getElementById("nome").disabled = false;
            }

        });
    })
</script>

