@model IEnumerable<Modelo.Cadastros.Curso>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutIES.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Departamento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Departamento.Nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CursoID">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.CursoID">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.CursoID">Remover</a>
            </td>
        </tr>
}
    </tbody>
</table>
